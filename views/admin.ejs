<!DOCTYPE html>
<html>
<head>
    <title>Admin Paneli</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }
        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            text-align: left;
            padding: 8px;
        }
        th {
            background-color: #000000;
            color: white;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        button {
            background-color: #000000;
            color: white;
            padding: 10px 20px;
            margin: 5px;
            border: none;
            cursor: pointer;
        }
        button:hover {
            background-color: #2d11ba;
        }
        input[type="text"],
        input[type="password"] {
            padding: 10px;
            margin: 5px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
    </style>
    
</head>
<body>
    <h1 style="text-align: center;">ADMİN PANELİ</h1>
    <table>
        <tr>
            <th>Kullanıcı </th>
            <th>İşlemler</th>
        </tr>
        <% kullanicilar.forEach(function(kullanici) { %>
            <tr>
                <td><%= kullanici.name %></td>
                <td>
                    <form action="/admin/update/<%= kullanici._id %>" method="post">
                        <input type="text" name="name" value="<%= kullanici.name %>">
                        <input type="password" name="password">
                        <button type="submit">Güncelle</button>
                    </form>
                    <form action="/admin/delete/<%= kullanici._id %>" method="post">
                        <button type="submit">Sil</button>
                    </form>
                </td>
            </tr>
        <% }); %>
    </table>
</body>
</html>
